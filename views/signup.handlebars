<div class="col-md-6">
    <h2>Signup</h2>

    <form id="signup-form" class="form signup-form">
      <div class="form-group">
        <label for="user-signup">Full Name:</label>
        <input class="form-input" type="text" id="user-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup">Email:</label>
        <input class="form-input" type="email" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="phone-signup">Phone:</label> 
        <input class="form-input" type="number" id="phone-signup">
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <label for="confirm-signup">Confirm Password:</label>
        <input class="form-input" type="password" id="confirm-signup"> 
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Submit</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/signup.js"></script>